{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Implementer Report Schema",
    "description": "Report generated by an implementer (AI or human) detailing work done.",
    "type": "object",
    "required": [
        "task_packet_id",
        "status",
        "summary",
        "changes",
        "verification",
        "artifacts"
    ],
    "properties": {
        "task_packet_id": {
            "type": "string"
        },
        "status": {
            "type": "string",
            "enum": [
                "pass",
                "fail",
                "blocked"
            ]
        },
        "summary": {
            "type": "string"
        },
        "changes": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "verification": {
            "type": "object",
            "description": "Details of verification steps performed"
        },
        "artifacts": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "List of artifacts produced"
        },
        "deviations": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Explicit deviations from the plan"
        }
    }
}